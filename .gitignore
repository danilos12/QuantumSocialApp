# Laravel 8 and 9

# Ignore the .env file containing environment variables
.env

# Ignore log files and debug output
*.log
*.log.*
*.debugbar.*

# Ignore compiled source files
node_modules/
npm-debug.log
yarn-error.log
yarn-debug.log

# Ignore the Laravel storage and cache directories
storage/app/public
storage/framework/cache/data
storage/logs
storage/framework/sessions
storage/framework/testing
storage/framework/views

# Ignore the compiled PHP artifacts
bootstrap/cache/*.php

# Ignore the IDE files
.vscode/
.idea/
.phpstorm.meta.php
*.sublime-project
*.sublime-workspace

# Ignore deployment scripts
.env.production
.env.local

# Ignore files generated by Laravel during runtime
/public/hot
/public/storage
/public/mix-manifest.json
/public/hot

# Ignore backup files
*.bak
*.swp
*.swo

# Ignore Composer and NPM lock files if they should be managed by the deployment system
composer.lock
package-lock.json
